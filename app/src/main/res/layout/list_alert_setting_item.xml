<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="43px"
              android:minHeight="43px"
              android:background="#ffffff"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_device_address"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="8001"
        android:textColor="#212121"
        android:textSize="14px"/>

    <TextView
        android:id="@+id/tv_sensor"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="EX"
        android:textColor="#212121"
        android:textSize="14px"/>

    <TextView
        android:id="@+id/tv_one_alert"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="AL:10.00"
        android:textColor="#212121"
        android:textSize="14px"/>

    <TextView
        android:id="@+id/tv_two_alert"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="AH:20.00"
        android:textColor="#212121"
        android:textSize="14px"/>

    <TextView
        android:id="@+id/tv_three_alert"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="AH:50.00"
        android:textColor="#212121"
        android:textSize="14px"/>
    <TextView
        android:id="@+id/tv_measure_unit"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="PPM"
        android:textColor="#212121"
        android:textSize="14px"/>


    <TextView
        android:id="@+id/tv_alert_out"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="OUT1"
        android:textColor="#212121"
        android:textSize="14px"/>

    <ImageButton
        android:id="@+id/ibtn_mode_setting"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="30px"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:src="@mipmap/image_alert_setting_enable"
        android:text="设置"
        android:textColor="#ed4e2a"
        android:textSize="14px"/>
</LinearLayout>
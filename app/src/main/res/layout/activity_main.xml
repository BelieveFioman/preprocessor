<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative_title"
        android:layout_width="match_parent"
        android:layout_height="66px"
        android:background="#21a675">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35px"
            android:gravity="center_vertical"
            android:text="2016-7-22    10:45:24"
            android:textColor="#ffffff"
            android:textSize="18sp"/>


        <TextView
            android:id="@+id/tv_show_info"
            android:layout_width="556px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            android:layout_toRightOf="@id/tv_date"
            android:background="@mipmap/tv__circle_bg"
            android:drawableLeft="@mipmap/ic_warnning"
            android:drawablePadding="5px"
            android:gravity="center|left"
            android:paddingLeft="20px"
            android:text="001号设备报警:980PM"
            android:textColor="#ED4E2A"
            android:textSize="16px"/>

        <TextView
            android:id="@+id/tv_show_info_normal"
            android:layout_width="556px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            android:layout_toRightOf="@id/tv_date"
            android:background="@mipmap/tv__circle_bg"
            android:drawablePadding="5px"
            android:gravity="center|left"
            android:paddingLeft="20px"
            android:text="所有设备运转正常"
            android:textColor="#212121"
            android:textSize="16px"/>


        <ImageView
            android:id="@+id/iv_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/tv_show_info"
            android:scaleType="fitXY"
            android:src="@mipmap/wifi"/>

        <View
            android:id="@+id/view_line1"
            android:layout_width="1px"
            android:layout_height="20px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19px"
            android:layout_toRightOf="@+id/iv_wifi"
            android:background="#ffffff"
            />

        <ImageView
            android:id="@+id/iv_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19px"
            android:layout_toRightOf="@+id/view_line1"
            android:src="@mipmap/ic_print"/>

        <View
            android:id="@+id/view_line2"
            android:layout_width="1px"
            android:layout_height="20px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19px"
            android:layout_toRightOf="@+id/iv_print"
            android:background="#ffffff"
            />


        <ImageView
            android:id="@+id/iv_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19px"
            android:layout_toRightOf="@+id/view_line2"
            android:src="@mipmap/ic_sound"/>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_pic"
        android:layout_width="match_parent"
        android:layout_height="56px"
        android:layout_below="@+id/relative_title"
        android:background="#ececec"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="56px"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_air_pump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="39px"
                android:background="@drawable/air_pumb_selector"
                android:clickable="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/iv_air_pump"
                android:gravity="center_vertical"
                android:text="气泵"
                android:textColor="#212121"
                android:textSize="17px"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="56px"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_point_valve"
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="39px"
                android:background="@drawable/point_valave_selector"
                android:clickable="true"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/iv_point_valve"
                android:gravity="center_vertical"
                android:text="换向阀"
                android:textColor="#212121"
                android:textSize="17px"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="56px"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_megnetic_valve"
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="39px"
                android:clickable="true"
                android:background="@drawable/megnetic_valave_selector"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/iv_megnetic_valve"
                android:gravity="center_vertical"
                android:text="电磁阀"
                android:textColor="#212121"
                android:textSize="17px"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="56px"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_blow_valve"
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="39px"
                android:background="@drawable/blow_valave_selector"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/iv_blow_valve"
                android:gravity="center_vertical"
                android:text="吹扫阀"
                android:textColor="#212121"
                android:textSize="17px"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="56px"
            android:layout_weight="1.2">

            <ImageView
                android:id="@+id/iv__25_thermostat"
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="39px"
                android:clickable="true"
                android:background="@drawable/thermostat_25_selector"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/iv__25_thermostat"
                android:gravity="center_vertical"
                android:text="25℃恒温器"
                android:textColor="#212121"
                android:textSize="16px"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="56px"
            android:layout_weight="1.3">

            <ImageView
                android:id="@+id/iv__120_thermostat"
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="39px"
                android:background="@drawable/thermostat_120_selector"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/iv__120_thermostat"
                android:gravity="center_vertical"
                android:text="120℃恒温器"
                android:textColor="#212121"
                android:textSize="16px"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/linear_pic"
        android:background="#d2d2d2"/>

    <FrameLayout
        android:id="@+id/fragment_content"
        android:name="com.keernuo.dn9000.prefrocessor.fragment.FragmentOne"
        android:layout_width="match_parent"
        android:layout_height="397px"
        android:layout_below="@+id/line4"/>

    <View
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/fragment_content"
        android:background="#d2d2d2"/>

    <RelativeLayout
        android:id="@+id/relative_bottom"
        android:layout_width="match_parent"
        android:layout_height="77px"
        android:layout_below="@+id/line5"
        android:background="#ececec">

        <Button
            android:id="@+id/btn_alert_log"
            android:layout_width="106px"
            android:layout_height="40px"
            android:layout_alignTop="@+id/btn_settings"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="50px"
            android:layout_toRightOf="@+id/btn_settings"
            android:background="#21a675"
            android:padding="8px"
            android:text="报警日志"
            android:textColor="#ffffff"
            android:textSize="18px"/>
        <LinearLayout
            android:layout_toRightOf="@+id/btn_alert_log"
            android:layout_marginLeft="40px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_air_pump_show"
                android:visibility="invisible"
                android:clickable="false"
                android:background="@drawable/air_pump_nomal"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_point_valave_show"
                android:visibility="invisible"
                android:clickable="false"
                android:layout_marginLeft="30px"
                android:background="@drawable/point_valve_normal"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_megnetic_valve_show"
                android:visibility="invisible"
                android:clickable="false"
                android:background="@drawable/megnetic_valave_normal"
                android:layout_marginLeft="30px"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_blow_valve_show"
                android:visibility="invisible"
                android:clickable="false"
                android:background="@drawable/blow_valave_normal"
                android:layout_marginLeft="30px"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv__25_thermostat_show"
                android:visibility="invisible"
                android:clickable="false"
                android:background="@drawable/thermostat_25_normal"
                android:layout_marginLeft="30px"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv__120_thermostat_show"
                android:visibility="invisible"
                android:clickable="false"
                android:background="@drawable/thermostat_120_normal"
                android:layout_marginLeft="30px"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>




        </LinearLayout>

        <ImageView
            android:id="@+id/iv_thermometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="110px"
            android:src="@mipmap/ic_thermometer"/>

        <TextView
            android:id="@+id/tv_thermometer_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50px"
            android:text="25.8℃"
            android:textColor="#212121"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="106px"
            android:layout_height="40px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/iv_thermometer"
            android:layout_marginLeft="88dp"
            android:layout_marginStart="88dp"
            android:background="#21a675"
            android:padding="8px"
            android:text="系统设置"
            android:textColor="#ffffff"
            android:textSize="18px"/>
    </RelativeLayout>


</RelativeLayout>

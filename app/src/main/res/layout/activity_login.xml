<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/logingrd"
    tools:context="com.keernuo.preprocessor.activity.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@mipmap/loglogin"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="后台管理平台"
        android:textColor="#5f6468"
        android:textSize="22sp"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@mipmap/mimadown"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/lock"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.8"
            android:background="@null"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColor="#b0b0b0"
            android:textSize="14sp"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/box_remember_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="400px"
        android:layout_marginTop="20px"/>

    <TextView
        android:id="@+id/tv_remember_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="26px"
        android:layout_toRightOf="@id/box_remember_pwd"
        android:layout_marginLeft="10px"
        android:gravity="center_vertical"
        android:text="记住密码"
        android:textColor="#212121"
        android:textSize="14px"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="110px"
        android:layout_height="40px"
        android:layout_below="@+id/box_remember_pwd"
        android:layout_marginTop="15px"
        android:layout_marginLeft="383px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/loginbg"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/btn_back"
        android:layout_width="110px"
        android:layout_height="40px"
        android:layout_below="@+id/box_remember_pwd"
        android:layout_toRightOf="@+id/btn_login"
        android:layout_marginLeft="30px"
        android:layout_marginTop="15px"
        android:background="@drawable/loginbg"
        android:text="返回主界面"
        android:textColor="#ffffff"
        android:textSize="16sp"/>


    <View
        android:id="@+id/linearLayout4"
        android:layout_width="265px"
        android:layout_height="1px"
        android:layout_below="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#b0b0b0"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="深圳科尔诺版权所有"
        android:textColor="#2d2d2d"
        android:textSize="12sp"/>

</RelativeLayout>
